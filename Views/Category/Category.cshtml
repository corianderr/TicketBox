@model CategoryViewModel

@{
    ViewData["Title"] = "Category Page";
}

@foreach (var item in Model.Events)
{
    <div class="col-md-4">
        <div class="card p-0">
            <div class="card-block-img">
                <img src="@item.PosterImage" alt="@item.Name">
                <a href="#"></a>
                <div class="wrapper">
                    <div class="card-age">@item.AgeLimit+</div>
                </div>
                <div class="card-tag">
                    <a href="#">@ViewBag.CategoryName</a>
                </div>
            </div>
            <div class="card-block-description">
                <a class="card-title" href="#">@ViewBag.CateogryName "@item.Name"</a>
                <div class="card-description">
                    <div class="card-date">
                    </div>
                    <div class="card-venue">
                        <a class="card-venue-link" href="#">
                        </a>
                    </div>
                    <a href="#" class="card-price">
                        БИЛЕТЫ ОТ @item.MinPrice KGS
                    </a>
                </div>
            </div>
        </div>
    </div>
}