@model LetsGo.ViewModels.CreateLocationViewModel

@{
    ViewData["Title"] = "Добавление площадки";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="mt-4">Добавить площадку</h4>
<hr />
<div class="row">
    <div class="col-md-9">
        <form id="create-location-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label class="label" asp-for="@Model.Name">Название</label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="label" asp-for="@Model.Address">Адрес</label>
                <input asp-for="@Model.Address" class="form-control" />
                <span asp-validation-for="@Model.Address" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="label" asp-for="@Model.Description">Описание</label>
                <textarea class="form-control" asp-for="@Model.Description" rows="4"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="label">Выберите категории</label>
                @for (int i = 0; i < Model.LocationCategories.Count; i++)
                {
                    <div class="form-check">
                        <input type="hidden" asp-for="@Model.LocationCategories[i].Value" />
                        <input type="hidden" asp-for="@Model.LocationCategories[i].Text" />
                        <input class="form-check-input" asp-for="LocationCategories[i].Selected" />
                        <label class="form-check-label">
                            @Model.LocationCategories[i].Text
                        </label>
                    </div>
                }
            </div>
            <div class="mb-2">
                <label class="label" asp-for="@Model.Phones">Номер телефона</label>
                <input asp-for="@Model.Phones" id="phoneNumber" class="form-control" type="tel" />
                <span asp-validation-for="@Model.Phones" class="text-danger"></span>
                <a class="add-more-phones" onclick="AddPhone()">
                    + Добавить еще один телефон
                </a>
            </div>
            <input type="hidden" asp-for="@Model.PhoneNums" value="" />
            <table id="phones" style="display:none;">
                <tbody>
                </tbody>
            </table>

            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-outline-success rounded-pill" />
            </div>
        </form>
    </div>
</div>

<div class="position-fixed p-3" style="z-index: 11; position: sticky; top: 0; right:0;">
    <div class="toast align-items-center text-dark bg-white rounded border-1 badge-dark"
         role="alert" aria-live="assertive" aria-atomic="true" data-autohide="false">
        <div class="toast-header">
            <strong class="mr-auto">LetsGo</strong>
            <button type="button" class="ml-auto mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            Площадка добавлена!
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $('#create-location-form').submit(function (event) {
            event.preventDefault();
            var phones = [];
            var tablePhones = $('#phones tbody tr');
            tablePhones.each(function () {
                phones.push($(this).find('td').text());
            });
            $('#PhoneNums').val(phones);
            $.ajax({
                type: "POST",
                url: "/Locations/Create",
                data: $('#create-location-form').serialize()
            }).done(function (data) {
                console.log(data);
                if (data == "success") {
                    $('.toast').toast('show');
                    setTimeout(function () {
                        window.location.href = '/Home/Index';
                    }, 2000);
                }
            });
        });

        function AddPhone() {
            var phone = $('#phoneNumber');
            if (phone.length > 0) {
                console.log(phone.val());
                $('#phones').show();
                $('#phones tbody').append('<tr><td>' + phone.val() + '</td><td>' +
                    '<input type="button" value="✖" class="btn btn-danger rounded-pill" onclick="Delete(this)" /></td></tr>');
                phone.val('');
            }
        }

        function Delete(a) {
            $(a).closest('tr').remove();
        }
    </script>
}